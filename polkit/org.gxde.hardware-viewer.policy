<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE policyconfig PUBLIC
          "-//freedesktop//DTD PolicyKit Policy Configuration 1.0//EN"
          "http://www.freedesktop.org/standards/PolicyKit/1/policyconfig.dtd">
<policyconfig>
  <action id="Get-Hardware-Info.org.gxde.hardware-viewer">
    <description>Get Hardware Info to launch the hardware viewer</description>
    <message>Authentication is required to update the system</message>
    <annotate key="org.freedesktop.policykit.exec.path">/usr/bin/gxde-hardware-viewer-helper</annotate>
    <annotate key="org.freedesktop.policykit.exec.allow_gui">true</annotate>
    <defaults>
      <allow_active>yes</allow_active>
      <allow_inactive>no</allow_inactive>
    </defaults>
  </action>
</policyconfig>
